<div class='container'>
  
<div class='row'>
<%= render 'book' %>


<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th><p><%= image_tag @book.user.get_profile_image(100,100) %></p></th>
        <th><p><%= link_to @book.title, book_path(@book.id)%></p></th>
        <th><p><%= @book.body %></p></th>
         <% if @book.user == current_user %>
            <th><p><%= link_to "Edit", edit_book_path(@book.id)%></p></th>
            <th><p><%= link_to "Delete", book_path(@book), method: :delete %></p></th>
        <% end %>
      </tr>
    </tbody>
  </table>
  <p><%=link_to @book.user.name, user_path(@book.user.id) %></p>
</div>

</div>
</div>



