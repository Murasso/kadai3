<main>
  <div class="container">
    <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  	<%= form_with model: @book do |f| %>
    <div class="form-group">
      <label for="inputTitle">Title</label>
      <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title", class:"form-control"%>
    </div>
    <div class="form-group">
       <label for="inputOpinion">Opinion</label>
        <%= f.text_area :body,  autofocus: true, id:"inputOpinion", placeholder:"Opinion", class:"form-control"%> 
    </div>
    <div class="form-group">
        <%= f.submit "Update Book",class:"btn btn-success" %>
    </div>
    <% end %>
    </div>
    
    </div>
    <div class="row">
      <div class="col-1 offset-md-3 text-right">
        <p><%= link_to "Show", book_path(@book.id)%></p>
      </div>
      <div class="col-0">
        |
      </div>
      <div class="col-1 text-left">
        <p><%= link_to "Back", books_path %></p>
      </div>
      
    </div>
    
    
  </div>
  
  
 
     
</main>