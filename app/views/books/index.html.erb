
<div class='container'>

<div class='row'>
  <%= render 'book' %>


  <div class="col-md-8 offset-md-1">
  <h2>Books</h2>

  
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <th><p><%= image_tag book.user.get_profile_image(100,100) %></p></th>
        <th><p><%= link_to book.title, book_path(book.id)%></p></th>
        <th><p><%= book.body %></p></th>
      </tr>
      <% end %>
    </tbody>
  </table>
    
  </div>
</div>
</div>


