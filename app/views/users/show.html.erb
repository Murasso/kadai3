<div class='container px-5 px-sm-0'>
<div class='row'>
<%= render 'user' %>


<div class="col-md-8 offset-md-1">
 
  <h2>Books</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
       <% @books.each do |book| %>
      <tr>
        <th><p><%= image_tag @user.get_profile_image(100,100) %></p></th>
        <th><p>Title：<%= link_to book.title, book_path(book.id)%></p></th>
        <th><p>Opinion：<%= book.body %></p></th>
      </tr>
      <% end %>
    </tbody>
  </table>
  
</div>
</div>
</div>



