<% if user_signed_in? %>
    <h1>User info</h1>
    <div>
      <h3>name <%= current_user.name %></h3>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <h3>introduction <%= current_user.introduction %></h3>
    </div>
    <%= link_to "edit userinfo", edit_user_path(User.find(current_user.id))%>
    <%= form_with model: Book.new, method: :post do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Option</h4>
      <%= f.text_area :body %>
      <%= f.submit '投稿' %>
    <% end %>
  <% end %>