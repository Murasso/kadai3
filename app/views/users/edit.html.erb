<main>
  <div class="container">
    <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h2>プロフィール編集</h2>
  	<%= form_with model: @user do |f| %>
    <div class="form-group">
      <label for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
    </div>
    <div class="form-group">
       <label for="inputImage">ProfileImage</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
    </div>
    <div class="form-group">
        <%= f.submit "Update User",class:"btn btn-success" %>
    </div>
    <% end %>
    </div>
    
    </div>
    <div class="row">
      <div class="col-1 offset-md-3 text-right">
        <p><%= link_to "Show", book_path(@book.id)%></p>
      </div>
      <div class="col-0">
        |
      </div>
      <div class="col-1 text-left">
        <p><%= link_to "Back", books_path %></p>
      </div>
    </div>
  </div>
     
</main>



  
  

  
 